generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int        @id @default(autoincrement())
  oauthId               String? // 소셜 로그인 고유 ID
  name                  String
  email                 String     @unique
  password              String?
  profileImage          String?    @db.Text
  phone                 String
  refreshToken          String?    @db.Text
  refreshTokenExpiresAt DateTime?
  pets                  Pet[]
  records               Record[]
  tracking              Tracking[]
  createdAt             DateTime   @default(now())
  updatedAt             DateTime   @updatedAt
}

model Pet {
  id   Int    @id @default(autoincrement())
  name String
  age  Int
  weight    Int
  profile   String?
  masterId  Int
  user      User     @relation(fields: [masterId], references: [id])
  records   Record[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Record {
  id     Int @id @default(autoincrement())
  userId Int
  petId  Int
  user      User     @relation(fields: [userId], references: [id])
  pet       Pet      @relation(fields: [petId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id             Int        @id @default(autoincrement())
  cropedImage    String     @db.Text
  predictedClass String
  confidence     String
  classIndex     Int
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  debuging       Debuging?
}

model Tracking {
  id        Int      @id @default(autoincrement())
  userId    Int
  tracking  String
  userIp    String
  bytes     String
  url       String
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
}

model Debuging {
  id        Int     @id @default(autoincrement())
  a1        Decimal @db.Decimal(30, 15)
  a2        Decimal @db.Decimal(30, 15)
  a3        Decimal @db.Decimal(30, 15)
  a4        Decimal @db.Decimal(30, 15)
  a5        Decimal @db.Decimal(30, 15)
  a6        Decimal @db.Decimal(30, 15)
  imagePath String  @db.Text
  imageId   Int     @unique
  Image     Image   @relation(fields: [imageId], references: [id])
}
