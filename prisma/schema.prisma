generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  oauthId      String? // 소셜 로그인 고유 ID
  name         String
  email        String     @unique
  password     String?
  profileImage String?    @db.Text
  phone        String
  pets         Pet[]
  records      Record[]
  Tracking     Tracking[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Pet {
  id        Int      @id @default(autoincrement())
  name      String
  age       Int
  weight    Int
  profile   String?
  masterId  Int
  user      User     @relation(fields: [masterId], references: [id])
  records   Record[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Record {
  id        Int      @id @default(autoincrement())
  userId    Int
  petId     Int
  disease   String
  cause     String
  solution  String
  images    Image[]
  user      User     @relation(fields: [userId], references: [id])
  pet       Pet      @relation(fields: [petId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id           Int      @id @default(autoincrement())
  recordId     Int
  disease      String
  cause        String
  solution     String
  croppedImage String   @db.Text
  petName      String
  record       Record   @relation(fields: [recordId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Tracking {
  id        Int      @id @default(autoincrement())
  userId    Int
  tracking  String
  userIp    String
  bytes     String
  url       String
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
}
